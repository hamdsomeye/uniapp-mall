.mall-list {
  padding: 0 20rpx 120rpx;
}
.mall-list .mall-box {
  display: inline-block;
  vertical-align: top;
  width: 345rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  overflow: hidden;
}
.mall-list .mall-box:nth-child(2n) {
  margin-left: 20rpx;
}
.mall-list .mall-box .mall-cover {
  position: relative;
  width: 100%;
  height: 200rpx;
  display: inline-block;
  vertical-align: top;
  background-size: cover;
  background-position: center;
}
.mall-list .mall-box .mall-cover > text {
  position: absolute;
  bottom: 5px;
  left: 10px;
  padding: 1px 10rpx;
  background-color: rgba(136, 145, 171, 0.5);
  font-size: 20rpx;
  color: #fff;
  border-radius: 5rpx;
}
.mall-list .mall-title {
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.mall-list .mall-score {
  font-size: 20rpx;
  padding: 0 20rpx;
}
.mall-list .mall-score:first-child {
  color: #fe587a;
}
.mall-list .mall-score:last-child {
  color: #8891ab;
  margin-left: 12rpx;
}
.mall-list .mall-reduct {
  padding: 10rpx 20rpx;
}
.mall-list .mall-reduct > ._div:first-child {
  margin-left: 0;
}
.mall-list .mall-reduct > ._div {
  display: inline-block;
  vertical-align: top;
  font-size: 18rpx;
  color: #fe587a;
  padding: 0 10rpx;
  border-radius: 5rpx;
  border: 1px solid #fe587a;
  background-color: rgba(254, 88, 122, 0.1);
  margin-left: 5rpx;
}
.mall-list .mall-price {
  font-size: 20rpx;
  color: #8891ab;
  padding: 0 20rpx 20rpx;
}
.mall-list .mall-more {
  font-size: 24rpx;
  color: #8891ab;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}

